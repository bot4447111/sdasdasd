<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Music - Roxy+</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            color: white;
            font-size: 2em;
            margin-bottom: 10px;
        }

        .nav {
            display: flex;
            gap: 15px;
            margin-top: 15px;
        }

        .nav a {
            color: white;
            text-decoration: none;
            padding: 8px 16px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            transition: all 0.3s;
        }

        .nav a:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }

        .nav a.active {
            background: rgba(255, 255, 255, 0.4);
        }

        .card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        .card h2 {
            color: #667eea;
            margin-bottom: 20px;
            font-size: 1.5em;
        }

        .status-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .status-item {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .status-item h3 {
            font-size: 0.9em;
            opacity: 0.9;
            margin-bottom: 10px;
        }

        .status-item p {
            font-size: 1.5em;
            font-weight: bold;
        }

        .queue-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .queue-item {
            background: #f5f5f5;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }

        .queue-item.now-playing {
            border-left-color: #764ba2;
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        }

        .queue-item h4 {
            color: #333;
            margin-bottom: 5px;
        }

        .queue-item p {
            color: #666;
            font-size: 0.9em;
        }

        .controls {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-danger {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(245, 87, 108, 0.4);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .empty-state i {
            font-size: 3em;
            margin-bottom: 15px;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .loading {
            animation: pulse 1.5s infinite;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üéµ Roxy+ Music</h1>
            <div class="nav">
                <a href="/">Home</a>
                <a href="/afk">AFK</a>
                <a href="/quest">Quest</a>
                <a href="/music" class="active">Music</a>
            </div>
        </div>

        <div class="status-grid">
            <div class="status-item">
                <h3>Bot Status</h3>
                <p id="botStatus">Loading...</p>
            </div>
            <div class="status-item">
                <h3>Voice Channel</h3>
                <p id="voiceChannel">Not Connected</p>
            </div>
            <div class="status-item">
                <h3>Songs in Queue</h3>
                <p id="queueCount">0</p>
            </div>
        </div>

        <div class="card">
            <h2>Now Playing</h2>
            <div id="nowPlaying" class="empty-state">
                <p>No music is currently playing</p>
            </div>
        </div>

        <div class="card">
            <h2>Queue</h2>
            <div id="queueList" class="empty-state">
                <p>Queue is empty</p>
            </div>
            <div class="controls">
                <button class="btn btn-danger" onclick="stopMusic()">‚èπÔ∏è Stop Music</button>
                <button class="btn btn-primary" onclick="refreshStatus()">üîÑ Refresh</button>
            </div>
        </div>
    </div>

    <script>
        async function fetchMusicStatus() {
            try {
                const response = await fetch('/api/music/status');
                const data = await response.json();
                updateUI(data);
            } catch (error) {
                console.error('Error fetching music status:', error);
            }
        }

        function updateUI(data) {
            // Update bot status
            document.getElementById('botStatus').textContent = data.connected ? 'Connected' : 'Disconnected';
            
            // Update voice channel
            document.getElementById('voiceChannel').textContent = data.voiceChannel || 'Not Connected';
            
            // Update queue count
            document.getElementById('queueCount').textContent = data.queueCount || 0;
            
            // Update now playing
            const nowPlayingDiv = document.getElementById('nowPlaying');
            if (data.nowPlaying) {
                nowPlayingDiv.innerHTML = `
                    <div class="queue-item now-playing">
                        <h4>üéµ ${data.nowPlaying.title}</h4>
                        <p>üë§ ${data.nowPlaying.author}</p>
                    </div>
                `;
            } else {
                nowPlayingDiv.innerHTML = '<div class="empty-state"><p>No music is currently playing</p></div>';
            }
            
            // Update queue
            const queueListDiv = document.getElementById('queueList');
            if (data.queue && data.queue.length > 0) {
                queueListDiv.innerHTML = '<div class="queue-list">' + 
                    data.queue.map((song, index) => `
                        <div class="queue-item">
                            <h4>${index + 1}. ${song.title}</h4>
                            <p>üë§ ${song.author}</p>
                        </div>
                    `).join('') + 
                    '</div>';
            } else {
                queueListDiv.innerHTML = '<div class="empty-state"><p>Queue is empty</p></div>';
            }
        }

        async function stopMusic() {
            if (!confirm('Are you sure you want to stop the music and clear the queue?')) {
                return;
            }
            
            try {
                const response = await fetch('/api/music/stop', { method: 'POST' });
                const result = await response.json();
                
                if (result.success) {
                    alert('Music stopped successfully');
                    fetchMusicStatus();
                } else {
                    alert('Error: ' + (result.message || 'Failed to stop music'));
                }
            } catch (error) {
                console.error('Error stopping music:', error);
                alert('Error stopping music');
            }
        }

        function refreshStatus() {
            fetchMusicStatus();
        }

        // Initial load
        fetchMusicStatus();
        
        // Auto-refresh every 5 seconds
        setInterval(fetchMusicStatus, 5000);
    </script>
</body>
</html>
